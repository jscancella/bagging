{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "groupName": "jackson",
      "matchPackagePrefixes": [
        "com.fasterxml.jackson.core:"
      ]
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
